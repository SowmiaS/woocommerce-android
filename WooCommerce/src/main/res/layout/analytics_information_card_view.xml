<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.analytics.daterangeselector.AnalyticsDateRangeCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:paddingTop="@dimen/major_125">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_analyticsCardTitle"
            style="@style/Woo.Card.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analytics_see_report_button_text"
            android:textSize="@dimen/text_minor_125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sales" />

        <LinearLayout
            android:id="@+id/ll_informationPanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_analyticsCardTitle">

            <com.woocommerce.android.ui.analytics.informationcard.AnalyticsInformationSectionView
                android:id="@+id/v_sectionTotalSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <com.woocommerce.android.ui.analytics.informationcard.AnalyticsInformationSectionView
                android:id="@+id/v_sectionNetSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/Woo.Divider"
            android:layout_marginTop="@dimen/major_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_informationPanel" />

        <ImageView
            android:id="@+id/iv_seeReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/major_100"
            android:contentDescription="@string/analytics_see_report_button_content_description"
            app:layout_constraintBottom_toBottomOf="@+id/tv_seeReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_seeReport"
            app:srcCompat="@drawable/ic_arrow_right" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_seeReport"
            style="@style/Woo.Card.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/major_75"
            android:text="@string/analytics_see_report_button_text"
            android:textSize="@dimen/text_minor_125"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="See Report" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>

